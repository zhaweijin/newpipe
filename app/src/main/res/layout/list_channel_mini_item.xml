<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:padding="@dimen/video_item_search_padding">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/itemThumbnailView"
        android:layout_width="@dimen/fragment_feed_height_133"
        android:layout_height="@dimen/fragment_feed_height_133"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/fragment_feed_margin_5"
        android:contentDescription="@string/list_thumbnail_view_description"
        android:src="@drawable/buddy_channel_item"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/itemTitleView"
        android:layout_width="@dimen/fragment_feed_width_150"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/itemThumbnailView"
        android:ellipsize="end"
        android:lines="1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/video_item_search_title_text_size"
        tools:ignore="RtlHardcoded"
        tools:text="Channel Title, Lorem ipsum"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/itemAdditionalDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemTitleView"
        android:layout_centerHorizontal="true"
        android:lines="1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="@dimen/video_item_search_upload_date_text_size"
        tools:ignore="RtlHardcoded"
        tools:text="10M subscribers"
        android:gravity="center_horizontal"/>

</RelativeLayout>
